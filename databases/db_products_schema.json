{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "products": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "A unique id for the product",
                        "title": "Product id"
                    },
                    "name": {
                        "type": "string",
                        "description": "The name of the product",
                        "title": "Product name"
                    },
                    "price": {
                        "type": "number",
                        "description": "The price of the product",
                        "title": "Product price"
                    },
                    "image_filename": {
                        "type": "string",
                        "description": "The filename of the image for the product",
                        "title": "Product image filename"
                    },
                    "description": {
                        "type": "string",
                        "description": "A description of the product",
                        "title": "Product description"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "price",
                    "image_filename",
                    "description"
                ]
            }
        }
    },
    "required": [
        "products"
    ]
}